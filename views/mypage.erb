<!DOCTYPE html>
<html>
  <head>
    <title>TimeLine</title>
    <link rel="stylesheet" href="//maxcdn.bootstrapcdn.com/bootstrap/3.2.0/css/bootstrap.min.css">
    <link rel="stylesheet" href="stylesheets/haiku.css">
  </head>
  <body>
      <!--Header Start-->
    <div class="jumbotron" id="myroom">
        <div class="container">
          <h1>MyRoom Is Here</h1>
          <p>
              <form>
                <div class="form-group">
                   <label for="inputPassword3" class="control-label">Font Preview</label>
                    <input type="text" name="name" class="form-control" placeholder="Text Input" onkeyup="alertValue()" onkeydown="alertValue()" name="font" id="txt">
                </div>
              </form>
          </p>
        </div>
    </div>
  	
  	<!--Header End-->
  	<div class="row">
         <h1 class="page-header">Favorite Font</h1>
    </div>
	  
	  <!--MyFont Start-->
	  <div class="row">
	    <% ["Jura","BoomtownDeco","CODE","Forum","garto","Gota","Hero","AdmirationPains","OpenBaskerville","passau"].each do |str| %>
	    <article id="box">
	    <div class="col-xs-12 col-sm-6 col-md-4">
          <ul class="panel panel-primary">
            <div class="row">
              <div class="col-md-12">
                <h3>
                  <span class="glyphicon glyphicon-bookmark">
                  </span> <%= str %>
                </h3>
              </div>
            </div>
            <div class="row">
              <div class="col-md-12 font_text text-center" id=<%= str %>>
                  <%= str %>
              </div>
            </div>
            <div class="row">
               <div class="col-md-12">
                 <a class="pull-right btn-lg" href="" >
                  <span class="glyphicon glyphicon-save"></span>
                </a>
              　</div>
            </div>
          </ul>
        </div>
      </article>
      <!--MyFont End-->
      
    <style type="text/css">
      @font-face {
					font-family: '<%= str %>';
					src: url('../fonts/<%= str %>.ttf')format('truetype');
			}
	    #<%= str %> {
	    font-family: <%= str %>;
	    font-size:40px;
	    word-break: break-all;
	    }
	</style>
	<% end %>
	</div>
	
    <script>
    //リアルタイム変更
     function alertValue() {
      
         var elm = document.getElementsByClassName("font_text");
         
         var previewtext = document.getElementById("txt").value;
      
          for(i=0; i<elm.length; i++) {
              elm[i].innerHTML=previewtext;
              if (elm[i].innerHTML=="") {
                elm[i].innerHTML=elm[i].id
              }
          }
     }
    </script>
  </body>
</html>